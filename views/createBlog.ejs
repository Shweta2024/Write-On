<%-  include("partials/header")   -%>


<div id="createBlogMode">
    <form action="/api/blogs" method="post">
        <div class="form-group">
            <label for="blogTitle">Title</label>
            <input type="text" class="form-control" id="blogTitle" name="blogTitle"
                placeholder="Enter title of the blog">
            <label for="blogBody">Post</label>
            <textarea class="form-control" id="blogBody" name="blogBody" rows="5" cols="30"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
    </form>
    
    <br>

    <button id="cancelButton" type="submit" class="btn btn-primary" href="/api/blogs/allBlogs">Cancel</button>
</div>


<%-  include("partials/footer")   -%>