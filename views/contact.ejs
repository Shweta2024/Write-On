<%- include("partials/header") -%>


<h1>CONTACT</h1>

<form action="/api/users/contact" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter yor Name" required="true">
        <br>
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your Email" required="true">
        <br>
        <label for="message">Your Message</label>
        <textarea class="form-control" id="message" name="message" rows="5" cols="30" required="true"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


