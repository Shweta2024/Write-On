<%- include("partials/header") -%>

<h1>HOME</h1>
<h4><%=para%></h4>
<br>    

<% posts.forEach(function(post){ %>
    <h3> <%=post.postTitle%> </h3>
    <!--split(" ") : splits the string at space and then store them into an array-->
    <!--splice(0,100) : gives words from 0 to 100 index from the array of strings-->
    <!--join(" ") : joins all the words that we got from the array of string using splice() method with a space in between them-->
    <!--slice(begin,end) : slice a string and from begin to end-->
    <p> <%=post.postBody.slice(0,100)+"..."%><a href="/posts/<%=post._id%>"+<%=post.postTitle%> >Read more</a></p>
    <br>
<%})%>
    


